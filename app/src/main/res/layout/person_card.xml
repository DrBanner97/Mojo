<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdv_subjectcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#ffff"
    app:cardCornerRadius="3dp"
    app:cardElevation="2.5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/i_personIcon"
            android:layout_width="93dp"
            android:layout_height="87dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:src="@drawable/blank_dp_small" />

        <TextView
            android:id="@+id/tv_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"

            android:layout_marginStart="42dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/i_personIcon"
            android:layout_toRightOf="@+id/i_personIcon"
            android:text="Person Name"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_personName"
            android:layout_alignStart="@+id/tv_personName"
            android:layout_below="@+id/tv_personName"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:padding="5dp"
            android:text="Total:- Rs "
            android:textSize="18sp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp" />

        <TextView
            android:id="@+id/tv_totalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/tv_total"
            android:layout_alignBottom="@+id/tv_total"
            android:layout_toEndOf="@+id/tv_total"
            android:layout_toRightOf="@+id/tv_total"

            android:text="0"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>